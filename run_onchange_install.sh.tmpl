#!/bin/bash

set -euo pipefail

# ---- functions ----

install_pipx() {
    local app=$1
    if ! command -v "$app" &> /dev/null; then
        echo "ðŸ“¥ Installing $app..."
        pipx install "$app"
    fi
}

install_web_app() {
    local app_name=$1
    local app_url=$2

    if ! command -v "$app_name" &> /dev/null
    then
        echo "ðŸ“¥ Installing $app_name..."
        curl -L -o /tmp/app.rpm "$app_url" && sudo dnf install -y /tmp/app.rpm
    fi
}

install_zsh_plugin() {
    local plugin=$1
    if [ ! -d "$HOME/.oh-my-zsh/custom/plugins/$plugin" ]; then
        echo "ðŸ“¥ Installing $plugin..."
        git clone https://github.com/zsh-users/$plugin $HOME/.oh-my-zsh/custom/plugins/$plugin
    fi
}

echo "ðŸ¦¹ This script requires administrator privileges. Enter your password."
sudo -v
echo "ðŸ¦¹ You are now logged as root âœ…"

{{ if eq .chezmoi.os "darwin" }}

brews=(
    {{ range .packages.darwin.brews }}{{ . }}
    {{ end }})

casks=(
    {{ range .packages.darwin.casks }}{{ . }}
    {{ end }})

mas=(
    {{ range .packages.darwin.mas }}{{ . }}
    {{ end }})

echo "ðŸ’» Installing Xcode Command Line Tools..."
if ! xcode-select -p &>/dev/null; then
    xcode-select --install
fi
if test ! $(which brew) 
then
  echo "ðŸº Installing Homebrew..."
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  echo 'eval "$(/opt/homebrew/bin/brew shellenv)"' >> /Users/$user/.zprofile
  eval "$(/opt/homebrew/bin/brew shellenv)"
  echo "ðŸº Installing Homebrew âœ…"
fi
echo "â˜ï¸ Updating homebrew..."
brew update
echo "ðŸº Installing brew apps..."
brew install "${brews[@]}"
echo "ðŸº Installing brew casks..."
brew install --cask "${casks[@]}"
echo "ðŸ§¹ Cleaning up..."
brew cleanup -s
echo "ï£¿ Installing App Store apps..."
mas install "${mas[@]}"
echo "ðŸ Installing pipx packages..."
{{ range .packages.darwin.pipx }}install_pipx {{ . }}
{{ end }}

{{ end }}

{{ if eq .chezmoi.os "linux" }}
copr=(
    {{ range .packages.linux.copr }}{{ . }}
    {{ end }})
dnf_packages=(
    {{ range .packages.linux.dnf_packages }}{{ . }}
    {{ end }})
flatpaks=(
    {{ range .packages.linux.flatpaks }}{{ . }}
    {{ end }})
gnome_extensions=(
    {{ range .packages.linux.gnome_extensions }}{{ . }}
    {{ end }})

# Enable repositories if they haven't been enabled
if ! dnf repolist | grep -q 'terra'; then
    echo "ðŸŒ Enabling repository terra"
    sudo dnf install -y --nogpgcheck --repofrompath 'terra,https://repos.fyralabs.com/terra$releasever' terra-release
fi
if ! dnf repolist | grep -q 'gh-cli'; then
    echo "ðŸŒ Enabling repository gh-cli"
    sudo dnf config-manager addrepo --from-repofile=https://cli.github.com/packages/rpm/gh-cli.repo
fi
if ! dnf repolist | grep -q 'docker-ce-stable'; then
    echo "ðŸŒ Enabling repository docker-ce-stable"
    sudo dnf config-manager addrepo --from-repofile=https://download.docker.com/linux/fedora/docker-ce.repo
fi
if ! dnf repolist | grep -q 'vscode'; then
    echo "ðŸŒ Enabling repository vscode"
    sudo rpm --import https://packages.microsoft.com/keys/microsoft.asc
    echo -e "[code]\nname=Visual Studio Code\nbaseurl=https://packages.microsoft.com/yumrepos/vscode\nenabled=1\nautorefresh=1\ntype=rpm-md\ngpgcheck=1\ngpgkey=https://packages.microsoft.com/keys/microsoft.asc" | sudo tee /etc/yum.repos.d/vscode.repo > /dev/null
fi

for repo in "${copr[@]}"; do
    repo_name="${repo//\//:}"
    if ! dnf repolist | grep -q "copr:copr.fedorainfracloud.org:$repo_name"; then
        echo "ðŸŒ Enabling repository $repo"
        sudo dnf copr enable -y "$repo"
    fi
done

dnf check-update
echo "ðŸ“¦ Installing apps from dnf..."
sudo dnf install -y "${dnf_packages[@]}"
echo "ðŸ“¦ Installing flatpaks..."
flatpak install -y flathub "${flatpaks[@]}"
echo "ðŸŒ Installing apps from the web..."
{{ range .packages.linux.web }}install_web_app {{ .name | quote }} {{ .url | quote }}
{{ end }}
# --- GlobalProtect VPN ---
if ! command -v "globalprotect" &> /dev/null
then
    echo "ðŸ“¥ Installing globalprotect..."
    gp_url=$(flatpak run --command=bw com.bitwarden.desktop get notes globalprotect)
    curl -L -o /tmp/app.rpm "$gp_url" && sudo dnf install -y /tmp/app.rpm
fi

echo "ðŸ Installing pipx packages..."
{{ range .packages.linux.pipx }}install_pipx {{ . }}
{{ end }}

# --- Microsoft fonts ---
if [ ! -d "/usr/share/fonts/msfonts" ]; then
    echo "ðŸŒ Installing Microsoft fonts"
    tmp_dir=$(mktemp -d)
    font_zip="$tmp_dir/msfonts.zip"
    curl -L $(flatpak run --command=bw com.bitwarden.desktop get notes msfonts) -o "$font_zip"
    sudo unzip -o "$font_zip" -d /usr/share/fonts
    rm -rf "$tmp_dir"
    sudo fc-cache -fv
fi

# --- GNOME Extensions ---
echo "ðŸ§© Installing GNOME extensions..."
gext install "${gnome_extensions[@]}"

sudo dconf update
{{ end }}

# --- Oh My Zsh ---

echo "ðŸ› ï¸ Configuring Zsh..."
if [[ "$SHELL" != *zsh* ]]; then
    echo "ðŸ› ï¸ Setting Zsh as default shell..."
    chsh -s /usr/bin/zsh
fi
if [ ! -d "$HOME/.oh-my-zsh" ]; then
    echo "ðŸ› ï¸ Installing Oh My Zsh..."
    sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
fi
echo "ðŸ› ï¸ Installing zsh plugins..."
{{ range .zsh }}install_zsh_plugin {{ . }}
{{ end }}

# --- SSH ---

echo "ðŸ” Configuring SSH..."
mkdir -p $HOME/.ssh
touch $HOME/.ssh/config

{{ if eq .chezmoi.os "linux" }}
# --- Docker ---
echo "ðŸ³ Configuring Docker..."
if ! getent group docker > /dev/null; then
  sudo groupadd docker
fi
sudo usermod -aG docker $USER
sudo systemctl enable --now docker
{{ end }}


echo "ðŸŽ‰ Installation complete!"

